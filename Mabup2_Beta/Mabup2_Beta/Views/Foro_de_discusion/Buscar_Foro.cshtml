@model Mabup2_Beta.Models.Foro_modelo
@{
    ViewData["Title"] = "Buscar_Foro";
}

<div class="mabup-logo">
    <h1 class="display-1">MABUP</h1>
</div>

<font color="white" class="h3">Foro de debate</font>
<br />
<br />

<style>
    button {
        height: 50px;
        width: 100px;
    }

    input {
        height: 50px;
        width: 800px;
    }

    .container .card {
        width: 300px;
        height: 70px;
        border-radius: 8px;
        box-shadow: 0 2px 2px rgba(0,0,0,0.2);
        overflow: hidden;
        margin: 20px;
        text-align: center;
        transition: all 0.25s;
    }

        .container .card:hover {
            transform: translateY(-15px);
            box-shadow: 0 12px 16px rgba(0, 0, 0, 0.2);
        }
</style>

<form asp-action="Buscar_Foro" method="post">
    <label>Crear un nuevo foro</label><br />
    <a href="/Foro_de_discusion/Crear_Foro/?ID=@ViewBag.ID"><img src="~/Imagenes/btnCrear_Foro.png" /></a> &nbsp &nbsp &nbsp &nbsp
    <input asp-for="ID" value="@ViewBag.ID" type="hidden"/>
    <input asp-for="Foro" placeholder="Buscar foro" /><button type="submit">&#128270</button>
</form>


@if (ViewBag.Validacion == true)
{
    <center>
        <table>
            <thead>
                <tr>
                    <th>Foro</th>
                    <th>Materia</th>
                    <th>Hecho por</th>
                </tr>
            </thead>
            <tr>
                <td>
                    <div class="container">
                        @foreach (string Foro in ViewBag.Tema)
                        {
                            <a href="/Foro_de_discusion/Foro/?Nombre_foro=@Foro&ID=@ViewBag.ID">
                                <div class="card">
                                    <label>@Foro</label>
                                </div>
                            </a>
                        }
                    </div>
                </td>
                <td>
                    <div class="container">
                        @foreach (string Materia in ViewBag.Materia)
                        {
                            <a href="/Servicio_Stream/Reproductor/?Materia=@Materia">
                                <div class="card">
                                    <label>@Materia</label>
                                </div>
                            </a>
                        }
                    </div>
                </td>
                <td>
                    <div class="container">
                        @foreach (string Autor in ViewBag.Autor)
                        {
                            <div class="card">
                                <label>@Autor</label>
                            </div>
                        }
                    </div>
                </td>
            </tr>
        </table>
    </center>
}
else
{
    <br /><center><font class="h3" color="white">No se encontraron resultados :(</font></center>
}


