@model Mabup2_Beta.Models.YouTubeSearchResult

@{
    ViewData["Title"] = "Reproductor";
}

<center><font color="white">@ViewBag.Materia</font></center>

<style>
    video {
        width: 500px;
        height: 281px;
        border-radius: 8px;
        box-shadow: 0 2px 2px rgba(0,0,0,0.2);
        overflow: hidden;
        margin: 20px;
        text-align: center;
        transition: all 0.25s;
        visibility: visible;
    }
</style>

<div class="text-center">
    <h1 class="display-2">MABUP</h1>
</div>
<br /><br /><br />
<font class="h4">Selecciona el tema que sea de tu interes</font>

<form asp-action="Reproductor" method="post">
    <input name="Materia" value="@Model.Tema" type="hidden" />
    <select name="Tema">
        <option disabled selected>Selecciona un tema</option>
        <option value="Algebra">Algebra</option>
        <option value="Geometria euclediana y analitica">Geometria euclediana y analitica</option>
        <option value="Calculo Diferencial e Integral">Calculo Diferencial e Integral</option>
        <option value="Probabilidad y estadistica">Probabilidad y estadistica</option>
        @* ...otros temas según la materia *@
    </select>
    <button type="submit">Seleccionar</button>
</form>

<!--VALIDACION DE LOS VIDEOS-->
@if (Model?.Videos != null && Model.Videos.Count > 0)
{
    <h3>Videos encontrados para: @Model.Tema</h3>
    <div>
        @foreach (var video in Model.Videos)
        {
            <div style="margin-bottom:30px;">
                <h4>@video.Title</h4>
                <img src="@video.ThumbnailUrl" alt="@video.Title" />
                <br />
                <iframe width="500" height="281" src="https://www.youtube.com/embed/@video.VideoId" frameborder="0" allowfullscreen></iframe>
            </div>
        }
    </div>
}
else if (!string.IsNullOrEmpty(Model?.Tema))
{
    <p>No se encontraron videos para el tema seleccionado.</p>
}