<!DOCTYPE html>

<style>
    body {
        margin: 0;
        padding: 0;
        background-size: cover;
        background-position: center;
        font-family: sans-serif;
        /* Define el degradado como fondo */
        background: linear-gradient(to right, #8a2be2, #a3c7c5); /* De Púrpura a Gris oscuro */
        /* Propiedades para asegurar que el degradado cubra toda la pantalla */
        background-size: cover;
        background-attachment: fixed;
        /* Margin bottom by footer height */
        margin-bottom: 60px;
    }

    .mabup-logo {
        text-align: center;
        color: powderblue;
    }

    footer{
		text-align: center;
        padding: 10px;
        width: 100%;
        color: aliceblue;
        background: linear-gradient(to right, #ad7fdb, #410a78);
    }

    p{
        margin: 0;
        padding: 0;
		border: 0;
    }
    
</style>

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mabup-v2021.2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
    <body>
   
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @RenderSection("Scripts", required: false)

        <footer><p>&copy; 2021 - Mabup-v2021.2</p></footer>
    </body>
</html>

